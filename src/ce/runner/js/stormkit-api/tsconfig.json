{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "module": "node20",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
